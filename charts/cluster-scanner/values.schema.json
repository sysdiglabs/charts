{
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "required": [
    "global",
    "scannerMode"
  ],
  "properties": {
    "scannerMode": {
      "type": "string",
      "enum": [
        "local",
        "multi"
      ]
    },
    "global": {
      "type": "object",
      "required": [
        "clusterConfig",
        "sysdig"
      ],
      "properties": {
        "clusterConfig": {
          "type": "object",
          "required": [
            "name"
          ],
          "properties": {
            "name": {
              "type": "string"
            }
          }
        },
        "sysdig": {
          "type": "object",
          "required": [
            "accessKey"
          ],
          "properties": {
            "accessKey": {
              "type": "string"
            }
          }
        }
      }
    },
    "imageSbomExtractor": {
      "type": "object",
      "properties": {
        "mirrors": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "registryMirrors": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "insecureRegistries": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "labels": {
      "type": "object",
      "additionalProperties": { "type": "string" }
    },
    "podLabels": {
      "type": "object",
      "additionalProperties": { "type": "string" }
    }
  }
}
