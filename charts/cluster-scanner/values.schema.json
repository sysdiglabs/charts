{
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "required": [
    "global"
  ],
  "properties": {
    "global": {
      "type": "object",
      "required": [
        "clusterConfig",
        "sysdig",
        "scannerMode"
      ],
      "properties": {
        "clusterConfig": {
          "type": "object",
          "required": ["name"],
		  "properties": {
			  "name": { "type": "string" }
		  }
        },
        "sysdig": {
          "type": "object",
          "required": ["accessKey"],
		  "properties": {
			  "accessKey": { "type": "string" }
		  }
        },
        "scannerMode": {
          "type": "string",
		  "enum": [
			  "local",
			  "multi"
		  ]
		}
      }
    }
  }
}
